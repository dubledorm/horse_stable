= render('layouts/template_parts/small_title', locals: { title: I18n.t('forms.forgot_password.title') })

%section#contact-page
  .container
    = render('layouts/template_parts/large_title', locals: { title: I18n.t('forms.forgot_password.large_title'),
    text: I18n.t('forms.forgot_password.title_text') })

    .row.contact-wrap
      -# Сообщения об ошибках
      = render('shared/alert_notice')

      -# Ввод EMail для отправки инструкций
      .col-sm-5.col-sm-offset-1
        = render('forgot_password_form')

