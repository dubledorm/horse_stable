.widget.archieve
  %h3
    = I18n.t('social_networks')
  .row
    .col-sm-12
      %ul{ class: 'blog_archieve' }
        - Auth::ServiceDescrManager::KNOWN_SERVICES_DESCR.each do |service|
          %li
            %i{ class: "fa #{service[1].icon_name}" }
            = service[0]
            %span{ class: 'pull-right' }
              - if @resource.services.find_all{ |elem| elem.service_type == service[0] }.any?
                %i{ class: "fa fa-check" }
              - else
                = link_to 'Подключить', '#'
