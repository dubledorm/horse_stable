.socials
  %h2
    = I18n.t('social_networks')
  %ul{ class: 'three_column_list' }
    - Auth::ServiceDescrManager::KNOWN_SERVICES_DESCR.each do |service|
      %li
        %i{ class: "fa #{service[1].icon_name}" }
        = service[1].service_name
        .pull-right
          - if @resource.has_service?(service[0])
            = link_to(I18n.t('turn_off'), '#', class: 'btn btn-cancel')
          - else
            = link_to(I18n.t('turn_on'), omniauth_authorize_path(User, service[0]), class: 'btn btn-primary')

  - if (Auth::ServiceDescrManager::KNOWN_SERVICES_DESCR.keys - @resource.services.map(&:provider)).any?
    .pull-right.bottom-comment
      = I18n.t('user.show.add_service')