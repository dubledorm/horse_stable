= render('layouts/template_parts/small_title', locals: { title: TestTask.model_name.human })

%section#test-task-page
  .container
    %ol.breadcrumb
      = render_breadcrumbs tag: :li, separator: ''

    .row.contact-wrap
      -# Сообщения об ошибках
      = render('shared/resource_alert_notice')

    .page-blocks
      .col-xs-12.col-md-8
        .experiment_show
          = render('test_task_show')
      .col-xs-10.col-md-4
        .row
          = link_to(user_cabinet_test_tasks_path, class: 'btn btn-success btn-lg') do
            %i.fa.fa-arrow-circle-up
              = t('.return_to_test_tasks')
        .row
          = link_to(user_cabinet_test_task_path(id: @resource.id), class: 'btn btn-primary btn-lg', method: :delete, data: { confirm: t('.sure') }) do
            %i.fa.fa-minus.fa-minus-square
              = t('.delete')
