%div
  = form_with(model: @user, url: create_user_and_service_url, method: "post") do |f|
    %p
      = f.label(:email)
      = f.text_field(:email)
    %p
      = f.label(:password)
      = f.password_field(:password)
    %p
      = f.label(:password_confirmation)
      = f.password_field(:password_confirmation)
    %p
      = submit_tag('save')