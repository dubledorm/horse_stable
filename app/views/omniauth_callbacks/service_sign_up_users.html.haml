= render('layouts/template_parts/small_title', locals: { title: I18n.t('forms.additional_parameters.title') })

%section#contact-page
  .container
    = render('layouts/template_parts/large_title', locals: { title: I18n.t('forms.additional_parameters.large_title'),
    text: I18n.t('forms.additional_parameters.title_text') })

    .row.contact-wrap
      -# Сообщения об ошибках
      = render('devise/shared/device_alert_notice')

      -# Форма регистрации
      .col-sm-5.col-sm-offset-1
        = render('additional_form')
