%h1
  Home page.
%div
  - if user_signed_in?
    = "Current user: #{current_user.email}"
  - else
    = 'User does not sign in'
%div
  %p
    = link_to('logout', destroy_user_session_path, method: :delete) if user_signed_in?
  %p
    = link_to('login', new_user_session_path) unless user_signed_in?
  %p
    = link_to('registry', new_user_registration_path) unless user_signed_in?

