= form_with(model: [@user, @gallery, @resource], local: true) do |f|
  = @resource.errors.full_messages
  = f.hidden_field(:gallery_id)

  %p
    = f.label(:name)
    = f.text_field(:name)
  %p
    = f.label(:description)
    = f.text_field(:description)
  %p
    = f.label :image
    = f.file_field :image

  %p
    = f.submit('save')
